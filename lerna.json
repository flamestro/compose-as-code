{
  "$schema": "node_modules/lerna/schemas/lerna-schema.json",
  "version": "independent",
  "packages": [
    "packages/*"
  ],
  "npmClient": "yarn",
  "command": {
    "publish": {
      "allowBranch": "main",
      "conventionalCommits": true,
      "createRelease": "github",
      "push": true,
      "yes": true,
      "since": "main",
      "message": "chore(release): publish [skip ci]",
      "ignoreChanges": [
        "**/node_modules/**",
        "**/*.md",
        "**/dist/**",
        "**/lib/**"
      ]
    }
  }
}
