{
  "name": "compose-as-code",
  "version": "0.1.6",
  "description": "Provides a module to express docker compose files as code",
  "main": "./lib/cli.js",
  "types": "index.d.ts",
  "exports": {
    ".": "./lib/index.js"
  },
  "typesVersions": {
    "*": {
      ".": [
        "./lib/index.d.ts"
      ]
    }
  },
  "scripts": {
    "test": "NODE_ENV=test jest --testMatch='**/*.test.ts'",
    "build": "../../node_modules/.bin/tsc",
    "release:ci": "yarn install --frozen-lockfile && yarn tsc && yarn publish",
    "patch": "npm version patch",
    "major": "npm version major",
    "minor": "npm version minor"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/flamestro/compose-as-code.git"
  },
  "bin": {
    "conduct": "./lib/cli.js"
  },
  "keywords": [
    "docker-compose",
    "iac",
    "docker",
    "as",
    "code",
    "compose",
    "as",
    "code"
  ],
  "author": "Ahmet Kilic @flamestro",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/flamestro/compose-as-code/issues"
  },
  "homepage": "https://github.com/flamestro/compose-as-code#readme",
  "devDependencies": {
    "@babel/core": "^7.21.8",
    "@babel/preset-env": "^7.21.5",
    "@babel/preset-typescript": "^7.21.5",
    "@types/jest": "^29.5.1",
    "babel-jest": "^29.5.0",
    "jest": "^29.5.0",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "@types/node": "^20.2.1",
    "esbuild": "^0.17.19"
  }
}
